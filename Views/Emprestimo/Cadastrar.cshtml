@{
    ViewData["tittle"] = "Cadastrar Empréstimo";
}
<div class="container bd-dark p-5 rounded-5">

    <div class="mb-5 text-center">
        <h1 class="text-light">Cadastro de Empréstimos</h1>
    </div>
    <form>
        <div class="mb-3">
            <label for="Recebedor" class="form-label">Recebedor:</label>
            <input type="text" class="form-control" id="Recebedor" placeholder="Quem está recebendo o livro?">
        </div>

        <div class="mb-3">
            <label for="Fornecedor" class="form-label">Fornecedor:</label>
            <input type="text" class="form-control" id="Fornecedor" placeholder="Quem está emprestando o livro?>
        </div>

        <div class="mb-3">
            <label for="Livro" class="form-label">Livro:</label>
            <input type="text" class="form-control" id="Livro" placeholder="Qual é o livro emprestado?">
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
